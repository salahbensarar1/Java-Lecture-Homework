<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<VBox xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.javalecturehomework.controller.MainMenuController"
      alignment="CENTER" spacing="15">
    <Label text="Database Menu System" style="-fx-font-size: 18px;"/>
    <Button text="Read Data" onAction="#onRead"/>
    <Button text="Read Data with Filter" onAction="#onReadWithFilter"/>
    <Button text="Add Data" onAction="#onWrite"/>
    <Button text="Update Data" onAction="#onChange"/>
    <Button text="Delete Data" onAction="#onDelete"/>
</VBox>
